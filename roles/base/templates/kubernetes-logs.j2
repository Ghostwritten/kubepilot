---
# roles/base/templates/kubernetes-logs.j2
# Log rotation configuration for Kubernetes
# Generated by Ansible - Do not edit manually

/var/log/pods/*/*.log {
    daily
    missingok
    rotate 5
    compress
    notifempty
    create 0644 root root
    postrotate
        /bin/kill -USR1 $(cat /var/run/rsyslogd.pid 2>/dev/null) 2>/dev/null || true
    endscript
}

/var/log/containers/*.log {
    daily
    missingok
    rotate 5
    compress
    notifempty
    create 0644 root root
}
